global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: "prometheus"
    static_configs:
      - targets: ["localhost:9090"]

  - job_name: "alloy"
    static_configs:
      - targets:
{% for host in groups['alloy'] %}
        - "{{ hostvars[host].ansible_host | default(host) }}:12345"
{% endfor %}
